<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Login</title>
</head>
<body>
    <div class="container-fluid">
        <center><h4>University Academic System</h4></center>
        <div class="d-flex flex-cloumn min-vh-100 justify-content-center align-items-center">
            <div class="card" style="width: 18rem;">
                <div class="card-header">USER LOGIN</div>
                <div class="card-body">
                    <div class="login">
                        <form class= "needs-validation" novalidate action="/login" method="POST">
                            <div class="mb-3">
                                <label for="name">Username </label>
                                <input type="text" name="username" id="name" value="" placeholder="Enter the Username" required>
                                <div class="invalid-feedback">user id must not be empty</div>
                            </div>
                            <div class="mb-3">
                                <label for="password">Password </label>
                                <input type="password"  name="password" id="pw" value="" placeholder="Enter the Password" required>
                                <div class="invalid-feedback">password must not be empty</div>
                            </div>               
                            <button type="submit" class="button" value="login"><span>Login</span></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<footer>
    <%- include('footer') %>
</footer>
</html>

<script>
    (function () {
      'use strict'
    
      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.querySelectorAll('.needs-validation')
    
      // Loop over them and prevent submission
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
    
            form.classList.add('was-validated')
          }, false)
        })
    })()
    </script>